<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/less_white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="243dp"
        android:background="@drawable/blue_back">

        <ImageView
            android:id="@+id/back_to_cites"
            android:layout_width="23dp"
            android:layout_height="15dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/arrow_back_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </ImageView>

        <ImageView
            android:id="@+id/loctation_icon"
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/location_icon"
            app:layout_constraintEnd_toStartOf="@+id/main_city_name"
            app:layout_constraintTop_toTopOf="@+id/main_city_name" />

        <TextView
            android:id="@+id/main_city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="140dp"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Rostov-on-don"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>

        <TextView
            android:id="@+id/coma_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text=","
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/main_city_name"
            app:layout_constraintTop_toTopOf="@+id/main_city_name">

        </TextView>

        <TextView
            android:id="@+id/main_country_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:text="Russia"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/coma_main"
            app:layout_constraintTop_toTopOf="@+id/main_city_name">

        </TextView>

        <ImageView
            android:id="@+id/arrow_icon_main"
            android:layout_width="9dp"
            android:layout_height="5dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="41dp"
            android:src="@drawable/arrow_icon"
            app:layout_constraintStart_toEndOf="@+id/main_country_name"
            app:layout_constraintTop_toTopOf="parent" />

        S

        <ImageView
            android:id="@+id/main_weather_icon"
            android:layout_width="62dp"
            android:layout_height="59dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="108dp"
            android:src="@drawable/few_clouds"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/main_temp">

        </ImageView>

        <TextView
            android:id="@+id/main_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="140dp"
            android:layout_marginBottom="108dp"
            android:fontFamily="@font/roboto_bold"
            android:text="27Â°C"
            android:textColor="@color/white"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/main_clouds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scattered clouds"
            tools:layout_editor_absoluteX="132dp"
            tools:layout_editor_absoluteY="152dp" />

        <TextView
            android:id="@+id/main_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monday,Jun 29,2022"
            tools:layout_editor_absoluteX="125dp"
            tools:layout_editor_absoluteY="187dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>